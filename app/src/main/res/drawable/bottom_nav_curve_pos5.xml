<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>

    <!-- Circular background holder -->
    <item
        android:left="270dp"
        android:right="30dp"
        android:top="-30dp">

        <layer-list>
            <!-- Circle background -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#F5F5F5" />
                    <size
                        android:width="80dp"
                        android:height="80dp" />
                </shape>
            </item>

            <!-- Your vector icon centered in the circle -->
            <item
                android:drawable="@drawable/ic_leaves_selected"
            android:width="51dp"
            android:height="51dp"
            android:gravity="center" />
        </layer-list>

    </item>

</layer-list>
