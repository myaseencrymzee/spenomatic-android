<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <TextView
            android:id="@+id/label_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/mulish_bold"
            android:text="Customer Details"

            android:textColor="@color/black_1717"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_back"
            app:layout_constraintBottom_toBottomOf="@id/label_heading"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="@id/label_heading" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/bg_rounded_12"
            android:padding="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/iv_back">

            <ImageView
                android:id="@+id/container_profile_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dummy_profile"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/label_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/mulish_semi_bold"
                android:letterSpacing="-0.02"
                android:text="Sarah Johnson"
                android:textColor="@color/grey_3434"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintBottom_toTopOf="@id/label_explore"
                app:layout_constraintStart_toEndOf="@id/container_profile_image"
                app:layout_constraintTop_toTopOf="@id/container_profile_image" />

            <TextView
                android:id="@+id/label_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_regular"
                android:text="Tech Solution Inc"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@id/container_profile_image"
                app:layout_constraintStart_toStartOf="@id/label_hello"
                app:layout_constraintTop_toBottomOf="@id/label_hello" />

            <ImageView
                android:id="@+id/iv_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_active"
                app:layout_constraintBottom_toBottomOf="@id/container_profile_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/container_profile_image" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_4sdp"
                app:layout_constraintEnd_toStartOf="@id/tv_time_date"
                android:drawableLeft="@drawable/ic_map"
                android:fontFamily="@font/mulish_regular"
                android:gravity="center_vertical"
                android:text="123 main st, Anytown, USA"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_explore" />

            <TextView
                android:id="@+id/tv_time_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_watch"
                android:drawablePadding="@dimen/_3sdp"
                android:fontFamily="@font/mulish_regular"
                android:gravity="center_vertical"
                tools:text="12-03-25, 2:30 PM"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_4sdp"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@id/tv_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_address"
                app:layout_constraintTop_toTopOf="@id/tv_address" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="@dimen/_2sdp"
                android:fontFamily="@font/mulish_regular"
                android:gravity="center_vertical"
                android:text="sarahjohn@gmail.com"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/_9ssp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_4sdp"
                app:layout_constraintEnd_toStartOf="@id/tv_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_address" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone"
                android:fontFamily="@font/mulish_regular"
                android:gravity="center_vertical"
                android:text="555 123 4567"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@id/tv_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_email"
                app:layout_constraintTop_toTopOf="@id/tv_email" />

            <TextView
                android:id="@+id/label_last_visit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/mulish_semi_bold"
                android:text="Last Visit"
                android:textColor="@color/grey_3434"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toStartOf="@id/divider1"
                app:layout_constraintStart_toStartOf="@id/tv_email"
                app:layout_constraintTop_toBottomOf="@id/tv_email" />

            <TextView
                android:id="@+id/tv_last_visit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_regular"
                android:text="2 Days ago"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_3sdp"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintEnd_toEndOf="@id/label_last_visit"
                app:layout_constraintStart_toStartOf="@id/label_last_visit"
                app:layout_constraintTop_toBottomOf="@id/label_last_visit" />

            <View
                android:id="@+id/divider1"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:background="@color/grey_CCCCCC"
                app:layout_constraintBottom_toBottomOf="@id/tv_last_visit"
                app:layout_constraintEnd_toStartOf="@id/label_frequency"
                app:layout_constraintStart_toEndOf="@id/label_last_visit"
                app:layout_constraintTop_toTopOf="@id/label_last_visit" />

            <TextView
                android:id="@+id/label_frequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_semi_bold"
                android:gravity="start"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="Frequency"
                android:textColor="@color/grey_3434"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toStartOf="@id/divider2"
                app:layout_constraintStart_toEndOf="@id/divider1"
                app:layout_constraintTop_toTopOf="@id/label_last_visit" />

            <TextView
                android:id="@+id/tv_frequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_regular"
                android:text="Weekly"
                android:gravity="start"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintEnd_toEndOf="@id/label_frequency"
                app:layout_constraintStart_toStartOf="@id/label_frequency"
                app:layout_constraintTop_toBottomOf="@id/label_frequency" />


            <View
                android:id="@+id/divider2"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:background="@color/grey_CCCCCC"
                app:layout_constraintBottom_toBottomOf="@id/tv_frequency"
                app:layout_constraintEnd_toStartOf="@id/label_total_visit"
                app:layout_constraintStart_toEndOf="@id/label_frequency"
                app:layout_constraintTop_toTopOf="@id/label_frequency" />

            <TextView
                android:id="@+id/label_total_visit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_semi_bold"
                android:text="Total Visit"
                android:gravity="start"
                android:layout_marginStart="@dimen/_4sdp"
                android:textColor="@color/grey_3434"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toStartOf="@id/divider3"
                app:layout_constraintStart_toEndOf="@id/divider2"
                app:layout_constraintTop_toTopOf="@id/label_frequency" />

            <TextView
                android:id="@+id/tv_total_visit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_regular"
                android:text="24"
                android:gravity="start"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintEnd_toEndOf="@id/label_total_visit"
                app:layout_constraintStart_toStartOf="@id/label_total_visit"
                app:layout_constraintTop_toBottomOf="@id/label_total_visit" />

            <View
                android:id="@+id/divider3"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="0dp"
                android:background="@color/grey_CCCCCC"
                app:layout_constraintBottom_toBottomOf="@id/tv_total_visit"
                app:layout_constraintEnd_toStartOf="@id/label_avg_visit"
                app:layout_constraintStart_toEndOf="@id/label_total_visit"
                app:layout_constraintTop_toTopOf="@id/label_total_visit" />

            <TextView
                android:id="@+id/label_avg_visit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_semi_bold"
                android:gravity="start"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="Avg. Visits"

                android:textColor="@color/grey_3434"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider3"
                app:layout_constraintTop_toTopOf="@id/label_frequency" />

            <TextView
                android:id="@+id/tv_avg_visit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_regular"
                android:text="7 days"
                android:gravity="start"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintEnd_toEndOf="@id/label_avg_visit"
                app:layout_constraintStart_toStartOf="@id/label_avg_visit"
                app:layout_constraintTop_toBottomOf="@id/label_avg_visit" />

            <TextView
                android:id="@+id/label_remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:fontFamily="@font/mulish_semi_bold"
                android:text="Remarks"
                android:textColor="@color/grey_3434"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toStartOf="@id/divider1"
                app:layout_constraintStart_toStartOf="@id/tv_email"
                app:layout_constraintTop_toBottomOf="@id/tv_last_visit" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_regular"
                android:text="Lorem Ipsum is the dummy text generator."
                android:textColor="@color/hint_text"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="@id/label_remark"
                app:layout_constraintTop_toBottomOf="@id/label_remark" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/label_recent_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/mulish_semi_bold"
            android:text="Recent Visits"
            android:textColor="@color/black_1717"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/container_detail" />
        <TextView
            android:id="@+id/tvNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:text="No recent visit yet."
            android:textColor="@color/theme_blue"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/btn_save"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/label_recent_visit" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_schedule"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/_6sdp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/view"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/label_recent_visit"
            app:layout_constraintVertical_bias="0.421"
            tools:itemCount="2"
            tools:listitem="@layout/item_schedule_list" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            style="@style/CustomMaterialButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:letterSpacing="-0.02"
            android:text="Check-In"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start" />
        <ProgressBar
            android:id="@+id/loader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/_10sdp"
            android:theme="@style/circularProgressStyle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/view"
            style="@style/CustomMaterialButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:elevation="0dp"
            android:layout_marginBottom="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start" />


        <ImageView
            android:id="@+id/btn_visited"
            style="@style/CustomMaterialButton"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            android:src="@drawable/btn_detail_visited"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/_15sdp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/_15sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>